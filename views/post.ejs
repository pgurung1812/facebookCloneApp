<body>
    <h1>Hello <%=user.userName%></h1>
     <a href="/logout">Sign out</a> <br>
     <a href="/profile">Go to current user's Profile</a> <br>
 <%   if(user.isAdmin){ %>
  
    <%    for(let i=0;i<posts.length;i++){ %>
        <%=   posts[i].title %>
         <%=   posts[i].message %>
         <a href="/profile/posts/<%=posts[i]._id%>">View Post here</a>
         
         <form
                action="/profile/posts/<%= posts[i]._id %>?_method=DELETE"
                method="POST"
                class="col-3"
              >
                <button class="btn btn-primary fa fa-trash" type="submit"></button>
              </form>
      
         <br>
      <%  } %>
  <%  }else{ %>
    <%    for(let i=0;i<posts.length;i++){ %>
        <%=   posts[i].title %>
         <%=   posts[i].message %>
         <a href="/profile/posts/<%=posts[i]._id%>">View Post here</a>
         <br>
      <%  } %>
  <%  } %>

   <form action="/profile/posts" method="post"> 
    <label for="title">Title:</label>
      <input type="text" name="title" placeholder="Please enter title here">
    <label for="post">Post:</label>
    <input type="text" name="post" placeholder="Please enter Post here">
    <button type="submit">Add a post</button>

   </form>
</body>
</html>